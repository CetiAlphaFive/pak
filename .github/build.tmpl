
name: pak build, <%=os%>, R <%=rversion%>

on:
  workflow_dispatch:
  push:

jobs:
  pak:
    runs-on: <%=os%>

    env:
      R_REMOTES_NO_ERRORS_FROM_WARNINGS: true

    steps:
    - uses: actions/checkout@v1
    - uses: r-hub/actions/pak-builder@feature/pak-builder
      with:
        rversions: "<%=rversion%>"
